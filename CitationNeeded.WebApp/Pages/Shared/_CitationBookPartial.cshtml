@{
    var citationBook = (CitationNeeded.Domain.ValueTypes.CitationBook)ViewData["CitationBook"];
}

@foreach (var citationGroup in citationBook.CitationGroups)
{
    <div class="card" style="width: 18rem;">
        <h5 class="card-title">Author: @citationGroup.Author</h5>
        <h6 class="card-subtitle mb-2 text-muted">Created: @citationGroup.Created</h6>
        <ul class="list-group list-group-flush">
            @foreach (var citation in citationGroup.Citations)
            {
                <li class="list-group-item">
                    @citation.Speaker: @citation.Text
                </li>
            }
        </ul>
    </div>
}